        <button class="navbar-toggler mt-3 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <span class="d-flex d-lg-none navbar-brand ml-3 pt-0"><a href="/blogs">blurt.</a></span>
    </div>


    <div class="collapse navbar-collapse mx-auto" id="navbarSupportedContent">
        <a class="d-none d-lg-block navbar-brand mx-auto mt-2 mb-4 pb-3 text-center" href="/blogs"> blurt.
            <p class="d-none d-lg-block">a community blog</p>
        </a>
        <ul class="navbar-nav">
            <li class="nav-item my-2">
                <a class="nav-link text-center" href="/blogs"><i class="bi bi-files"></i> all blogs</a>
            </li>
            <hr>
            <li class="nav-item my-2">
                <a class="nav-link text-center" href="/blogs/new"><i class="bi bi-file-text"></i> new blog</a>
            </li>
            <hr>
            <% if (!currentUser) { %>
                <li class="nav-item my-2">
                    <a class="nav-link text-center active-nav-link" href="/register"><i class="bi bi-person-plus"></i> register</a>
                </li>
                <hr>
                <li class="nav-item my-2">
                    <a class="nav-link text-center" href="/login"><i class="bi bi-person-check"></i> login</a>
                </li>
                <hr>
            <% } %>

            <% if (currentUser) { %>
                <li class="nav-item my-2">
                    <a class="nav-link text-center" href="/logout"><i class="bi bi-person-dash"></i> logout</a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>

<main>
    <section>
        <div class="container-fluid d-flex justify-content-center">
                    <div class="col">

                        <% if (error && error.length) { %>
                            <div class="alert alert-danger alert-dismissible fade show mt-5 login-card center-margin" role="alert">
                                <%=error%>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <% } %>

                        <h1 class="mt-5"> <span class="py-0 px-2 thick-underline">register.</span> </h1>

                        <form action="/register" method="POST" class="px-3 py-4 my-5 card login-card">

                            <label for="name" class="d-block mb-2">username</label>
                            <input type="text" class="mb-3" placeholder=" username" id="name" name="username" required oninvalid="this.setCustomValidity('a username is required.')" oninput="this.setCustomValidity('')"title="a username is required."> 

                            <label for="email" class="d-block mb-2">email</label>
                            <input type="email" class="mb-3" placeholder=" email" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" oninvalid="this.setCustomValidity('an email address of the format example@example.com is required.')" title="an email address of the format example@example.com is required." oninput="this.setCustomValidity('')" required> 

                            <label for="pass" class="d-block mb-2">password</label>
                            <input type="password" class="mb-3" placeholder=" password" id="pass" name="password" required oninvalid="this.setCustomValidity('the password must contain at least one number, one uppercase and lowercase letter, and at least 8 or more characters total.')" oninput="this.setCustomValidity('')" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                            title="the password must contain at least one number, one uppercase and lowercase letter, and at least 8 or more characters total."> 

                            <div class="g-recaptcha" data-sitekey="6LfNOqUaAAAAAHYeGloXhqcTWTiGIKmpZWaclQ4n" data-size="compact"></div>

                            <button class="btn btn-primary px-3 d-block mt-3">register</button>
                        </form>
                    </div>
        </div>
    </section>
</main>

