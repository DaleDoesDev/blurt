<div class="container-fluid">
    <div class="row">
        <h1 class="mt-3 center-margin-alt new-edit-margin"> <span class="py-0 px-2 thick-underline">new blog post.</span> </h1>

        <form class="col-md-5 col-8 my-4 new-edit-margin" action="/blogs" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label">title</label>
              <input type="text" class="form-control" name="blog[title]" id="title" required oninvalid="this.setCustomValidity('The blog post needs a title.')" 
              oninput="this.setCustomValidity('')">
            </div>
            <div class="mb-3">
              <label for="image"class="form-label">image</label>
              <input type="file" class="form-control" name="blog[images]" id="image" multiple>
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">post</label>
                <textarea class="form-control textbox" rows="8" name="blog[body]" id="body" required oninvalid="this.setCustomValidity('The body content is required.')"                oninput="this.setCustomValidity('')"></textarea>
            </div>
    
            <button type="submit" class="btn btn-primary px-5 my-4">post</button>
        </form>
    </div>

</div>

